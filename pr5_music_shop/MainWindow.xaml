<Window x:Class="pr5_music_shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr5_music_shop"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Button  x:Name="but" Grid.Row="2" Content="ВОЙТИ" Click="but_Click"/>
        <TextBlock x:Name="login_txt" Grid.Row="0" VerticalAlignment="Top" Text="Введите логин"/>
        <TextBox x:Name="login" Grid.Row="0" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="pass_txt" Grid.Row="1" VerticalAlignment="Top" Text="Введите пароль"/>
        <PasswordBox x:Name="password" Grid.Row="1" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
